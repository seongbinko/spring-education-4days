<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.re.kitri.hello.dao.UserDao">
    <insert id="insertUser"
            parameterType="kr.re.kitri.hello.model.User">
        INSERT INTO user (user_id, NAME, age)
        VALUES (#{userId},#{name},#{age})
    </insert>

    <select id="selectAllUsers" resultType="kr.re.kitri.hello.model.User">
        SELECT
            USER_ID as userId,
            NAME    as name,
            AGE     as age

        FROM USER
        ORDER BY USER_ID
    </select>

    <select id="selectUserByUserId"
                parameterType="java.lang.String"
                resultType="kr.re.kitri.hello.model.User">

        SELECT 	user_id AS userId,
        NAME	AS NAME,
        age	AS age
        FROM		user
        WHERE		user_id = #{value}
    </select>
</mapper>